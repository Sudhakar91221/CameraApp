<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <com.sudhakar.cameraapp.Preview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_mark"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#0000ff"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/abc_search_url_text_pressed"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/bt_camera_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_blank_button"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_gallery" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/bt_camera_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_blank_button"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_action_flash" />

            <ImageButton
                android:id="@+id/ibCameraTakePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_blank_button"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_action_juz_camera" />

            <ImageButton
                android:id="@+id/ibCameraFrontCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_blank_button"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_action_cam_reverse" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>